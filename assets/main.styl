button
  background-color #ffc107
  color #651e1e
  border none
  border-radius 20px 20px
  padding 10px 30px
  text-transform uppercase
  font-weight bold
  font-size 18px
  cursor pointer
  transition filter 250ms
  outline none
  box-shadow 0px 2px 2px rgba(0,0,0,0.4)
  -webkit-tap-highlight-color transparent

  &:hover,
  &:active,
  &:focus
    filter brightness(87%)
